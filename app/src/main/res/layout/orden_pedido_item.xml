<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/txt_opi_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="123456789012345"
        android:textColor="@color/color4"
        app:layout_constraintBottom_toBottomOf="@+id/txt_opi_hora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_opi_hora" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Pedido Hora:"
        android:textColor="@color/color4"
        app:layout_constraintBottom_toBottomOf="@+id/txt_opi_hora"
        app:layout_constraintStart_toEndOf="@+id/txt_opi_codigo"
        app:layout_constraintTop_toTopOf="@+id/txt_opi_hora" />

    <TextView
        android:id="@+id/txt_opi_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="15:00"
        android:textColor="@color/color4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_opi_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textColor="@color/color4"
        app:layout_constraintBottom_toBottomOf="@+id/txt_opi_hora"
        app:layout_constraintEnd_toStartOf="@+id/txt_opi_estado"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toEndOf="@+id/txt_opi_hora"
        app:layout_constraintTop_toTopOf="@+id/txt_opi_hora" />

    <TextView
        android:id="@+id/txt_opi_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="Estado"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_opi_hora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_opi_precio" />
</androidx.constraintlayout.widget.ConstraintLayout>